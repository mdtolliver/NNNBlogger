<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dsuappacademy.nnnblogger"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />



    <!--<android:uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />-->
    <!--<android:uses-permission android:name="android.permission.READ_PHONE_STATE" />-->
    <!--<android:uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />-->

    <application
        android:allowBackup="true"
        android:icon="@drawable/jump"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".BlogPostsActivity"
            android:label="@string/blog_post_title">
        </activity>

        <activity
            android:name=".BlogPostDetailActivity"
            android:label="@string/title_activity_blog_post_detail">
        </activity>

        <activity
            android:name=".CommentActivity"
            android:label="Comment">
        </activity>

    </application>

</manifest>